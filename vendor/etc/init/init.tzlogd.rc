service tzlogd /vendor/bin/tzlogd -num 5 -size 4194304
	class main
	user system
	group system
	oneshot
	disabled
	seclabel u:r:vendor_tzlogd:s0

on post-fs-data
	mkdir /data/vendor/tzlog  0775 system system

on property:persist.sys.tzlogd=true
	start tzlogd

on property:persist.sys.tzlogd=false
	stop tzlogd
